<h2 class="page-header"><%= book.title %></h2>
<div class="details">
<div>
     <img class="book-cover" src="<%= book.coverImagePath %>">
     <div class="details-btn-grid">
        <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm',
                           {  url: `/books/${book.id}`} )%>

        <a class="btn btn-primary details-author-button" 
                  href="/authors/<%= book.author.id %>">View Author</a>
     </div>
     
</div>

<div class="book-details-grid">
    <div class="book-details-label">Author:</div>
    <div><%= book.author.name %></div>
    <div class="book-details-label">ISBN:</div>
    <div><%= book.ISBN %></div>
    <div class="book-details-label">Publish Date:</div>
    <div><%= book.publishDate.toDateString() %></div>
    <div class="book-details-label">Price:</div>
    <div><%= book.price %></div>
    <div class="book-details-label">Description:</div>
     <div><%= book.description %></div>
</div>

</div>