<div>
    <label>ISBN</label>
    <input type="text" name="isbn" value="<%= book.isbn %>">
</div>

<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>

<div>
    <label>Author</label>
    <select name="author">
          <% authors.forEach(author => {%>
          <% if(author.id === book.author){ %>
    <option selected label = "<%= author.name %>" value="<%= author.id %>"></option>
          <% } else{ %>
    <option label = "<%= author.name %>" value="<%= author.id %>"></option>    
          <%}
          })%>
    </select>
</div>

<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
       value="<%= book.publishDate == null ? '' : 
          book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Price($)</label>
    <input type="number" min="0" step="0.01" name="price" value="<%= book.price %>">
</div>

<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea rows="5" cols="25" name="description"><%= book.description %></textarea>
</div>

